!! Appearance
urxvt.termName: rxvt-unicode
urxvt.scrollBar: false

urxvt*depth: 32
!! Font

URxvt*font: xft:Inconsolata Nerd Font Mono:size=15, xft:DejaVu Sans:size=12
URxvt*boldFont:      URxvt*font: xft:Inconsolata Nerd Font Mono:size=15, xft:DejaVu Sans:size=12

!! Larger history limit
urxvt.saveLines: 1000000

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size,keyboard-select
URxvt.keyboard-select.clipboard: truw
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!! Open urls in browser with Control-Click
urxvt.urlLauncher: /usr/bin/google-chrome-stable
urxvt.matcher.button: C1

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

URxvt.keysym.Control-l:   \033[1;5C
URxvt.keysym.Control-k:   \033[1;5A
URxvt.keysym.Control-j:   \033[1;5B
URxvt.keysym.Control-h:   \033[1;5D
